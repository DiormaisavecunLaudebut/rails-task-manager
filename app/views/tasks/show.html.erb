<h1><%= @task[:title]%></h1>
<%= link_to('Edit', edit_task_path(@task)) %>
<p><%= @task[:details] %></p>
<% if @task[:completed] == true %>
  <input type="checkbox" id="scales" name="scales" disabled checked> This task has been completed
<% else %>
  <input type="checkbox" id="scales" name="scales" disabled> This task has not been completed
<% end %>

<p><%= link_to('Back to List', tasks_path) %></p>

